<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thproject.test.com.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="thproject.test.com.myapplication.tabdat"
            android:label="@string/title_activity_splash_screen"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thproject.test.com.myapplication.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="thproject.test.com.myapplication.MainTabActivity"
            android:label="@string/title_activity_main_tab"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="thproject.test.com.myapplication.SongsActivity"
            android:label="@string/title_activity_songs"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="thproject.test.com.myapplication.TabViewActivity"
            android:label="@string/title_activity_tab_view" >
        </activity>
        <activity
            android:name="thproject.test.com.myapplication.SongRecognitionActivity"
            android:label="@string/title_activity_song_recognition" >
        </activity>

    </application>
    <supports-screens android:smallScreens="true"
        android:normalScreens="true" android:largeScreens="true"
        android:anyDensity="true" />

</manifest>
